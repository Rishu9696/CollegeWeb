@{
    ViewData["Title"] = "Mission, Vision & Values";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mission, Vision & Values</title>
    <link rel="stylesheet" href="~/css/mission.css" />
    
</head>
<body>

    <div class="container">
        <h1>Our Mission, Vision & Values</h1>

        <!-- Mission Section -->
        <div class="section">
            <div class="icon">🎯</div>
            <h2>Our Mission</h2>
            <p>To provide quality education and holistic learning experiences that develop students into responsible professionals and global leaders.</p>
        </div>

        <!-- Vision Section -->
        <div class="section">
            <div class="icon">🌍</div>
            <h2>Our Vision</h2>
            <p>To be a center of academic excellence, fostering innovation, leadership, and research in a dynamic learning environment.</p>
        </div>

        <!-- Values Section -->
        <div class="section">
            <div class="icon">💡</div>
            <h2>Our Core Values</h2>
            <p><strong>Excellence:</strong> Striving for the highest standards in education and research.</p>
            <p><strong>Integrity:</strong> Promoting honesty, transparency, and ethical conduct.</p>
            <p><strong>Innovation:</strong> Encouraging creative problem-solving and critical thinking.</p>
            <p><strong>Collaboration:</strong> Fostering teamwork and industry partnerships for greater impact.</p>
            <p><strong>Social Responsibility:</strong> Commitment to community engagement and sustainable development.</p>
        </div>

    </div>

</body>
</html>
