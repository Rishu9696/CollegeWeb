@{
    ViewData["Title"] = "Your Event Name";
}

<div class="container mt-4">
    <h2>Your Event Title</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/your_main_event_photo.jpg" class="img-fluid rounded shadow" alt="Main Event Image" />
        </div>
        <div class="col-md-6">
            <p>
                Your event description goes here. Write about the date, purpose, theme, chief guests, student involvement, performances, and achievements.
            </p>
            <p><strong>Categories:</strong> 2025</p>
            <p><strong>Completed Date:</strong> April 06, 2025</p>
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <h4>Gallery</h4>
        @for (int i = 1; i <= 6; i++) // Example for 6 images
        {
            <div class="col-md-3 col-6 mb-3">
                <img src="~/images/gallery/image@i.jpg" class="img-fluid img-thumbnail" alt="Gallery @i" />
            </div>
        }
    </div>
</div>
