@{
    ViewData["Title"] = "MMS Program";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MMS Program</title>
    <link rel="stylesheet" href="~/css/MMS-BMS.css.css">
</head>
<body>

    <div class="program-container">

        <!-- Top Banner -->
        <div class="program-banner">
            <h1>Master of Management Studies (MMS)</h1>
        </div>

        <!-- Overview -->
        <section class="program-section">
            <h2>Overview</h2>
            <p>The MMS program is a two-year full-time MBA-equivalent course affiliated with Mumbai University and approved by AICTE.</p>
        </section>

        <!-- Specializations -->
        <section class="program-section">
            <h2>Specializations</h2>
            <ul>
                <li>Finance</li>
                <li>Marketing</li>
                <li>Human Resources</li>
                <li>Operations</li>
                <li>IT & Systems</li>
            </ul>
        </section>

        <!-- Eligibility -->
        <section class="program-section">
            <h2>Eligibility & Admission</h2>
            <p><strong>Eligibility:</strong> Bachelor's degree in any field with at least 50% marks.</p>
            <p><strong>Admission Process:</strong> Based on MAH CET, CAT, CMAT, or other entrance exam scores.</p>
        </section>

        <!-- Course Structure -->
        <section class="program-section">
            <h2>Course Structure</h2>
            <table class="program-table">
                <tr>
                    <th>Semester</th>
                    <th>Subjects</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>Principles of Management, Financial Accounting, Business Statistics</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Operations Management, Marketing Strategy, HR Management</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Advanced Specialization Courses</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Internship & Project Work</td>
                </tr>
            </table>
        </section>

        <!-- Contact Section -->
        <section class="program-section contact">
            <h2>Contact Us</h2>
            <p>Email: <a href="mailto:admissions@aimsr.edu">admissions@aimsr.edu</a></p>
            <p>Phone: +91 98765 43210</p>
        </section>

    </div>

</body>
</html>
